# ESPHome Secrets Example
# Copy this file to secrets.yaml and fill in your values

# ESPHome API encryption key (generate with: esphome dashboard)
# Or use: openssl rand -base64 32
api_key: "your-32-character-api-encryption-key-here"

# OTA (Over-The-Air) update password
ota_password: "your-secure-ota-password-here"

# WiFi credentials (backup if Ethernet fails)
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# Optional: Static IP configuration
# static_ip: "192.168.1.100"
# gateway: "192.168.1.1"
# subnet: "255.255.255.0"

# Home Assistant Alarm Automation PIN
alarm_automation_pin: "123456"

# Emergency contact phone numbers
emergency_phone: "+15551234567"
trusted_contact_1: "+15559876543"
trusted_contact_2: "+15558765432"

# Admin PIN for service calls
alarm_admin_pin: "000000"